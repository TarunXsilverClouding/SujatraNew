<style>
  #shopify-section-{{ section.id }} .banner-strip-section__header{
  margin-top:{{ section.settings.margin_top }}px;
  margin-bottom:{{ section.settings.margin_bottom }}px;
  }

  #shopify-section-{{ section.id }}{
  position:relative;
  }
</style>
<div
  class="banner-strip-section__header color-{{ section.settings.color_scheme }} gradient {% if section.settings.device == 'desktop' %}small-hide{% endif %} {% if section.settings.device == 'mobile' %}medium-hide large-up-hide{% endif %}"
>
  <p class="banner-strip-section__heading">
    {% if section.settings.heading != blank %}
      {{ '--' -}}
      {{- section.settings.heading }}
      {{ '--' }}
    {% endif %}
  </p>
</div>

{% if section.settings.polygon == 'yes' %}
  <div class="polygon-vector">
    {{ 'icon-polygon.svg' | inline_asset_content }}
  </div>
{% endif %}

{% schema %}
{
  "name": "Banner Strip",
  "settings": [
    {
      "type": "text",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_9",
      "label": "Color Scheme"
    },
    {
      "type": "select",
      "label": "Choose Device",
      "id": "device",
      "default": "mobile",
      "options": [
        {
          "label": "both",
          "value": "both"
        },
        {
          "label": "mobile",
          "value": "mobile"
        },
        {
          "label": "desktop",
          "value": "desktop"
        }
      ]
    },
    {
      "type": "select",
      "label": "Choose Polygon",
      "id": "polygon",
      "default": "No",
      "options": [
        {
          "label": "Yes",
          "value": "yes"
        },
        {
          "label": "No",
          "value": "No"
        }
      ]
    },
    {
      "type": "header",
      "content": "Margin"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "margin-top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "margin-bottom",
      "default": 0
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Banner Strip"
    }
  ]
}
{% endschema %}
